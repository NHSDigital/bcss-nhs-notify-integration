{
  "autoOpenWorkspace.enableAutoOpenIfSingleWorkspace": true,
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.ruby-lsp": true,
    "**/.svn": true,
    "**/CVS": true,
    "**/Thumbs.db": true,
    "helloworld": true
  },
  "python.envFile": "./src/flask/.env",
  "python.testing.pytestArgs": [
    "-v",
    "-s",
    "--rootdir",
    "flask/tests",
    "flask"
  ],
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false
}
